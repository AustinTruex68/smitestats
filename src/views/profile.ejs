<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/lib/materialize/dist/css/materialize.min.css">
    <link rel="stylesheet" href="/css/globalStyles.css">
    <link rel="stylesheet" type="text/css" href="/css/profile.css">
</head>

<body>
    <header>
        <!-- navigation -->
        <%- include partials/navigation.ejs %>
    </header>
    <main>

        <div class="row">
            <div class="col s6 m4">
                <div class="card blue-grey darken-3">
                    <center>
                        <div class="card-image">
                            <img src="images/usericon1.png">
                        </div>
                        <span class="card-title green-text text-accent-4">Truextacy (PlayerName)</span>
                        <div class="card-content grey-text text-lighten-4">
                            <ul>
                                <li><strong>KDA:</strong> 2.5</li>
                                <li><strong>Player Compares: </strong> 32</li>
                                <li><strong>God Compares: </strong> 61</li>
                            </ul>
                        </div>
                    </center>
                </div>
            </div>
            <div class="col s6 m8">
                <ul class="tabs">
                    <li class="tab col s3"><a href="#userInfo">User Info</a></li>
                    <li class="tab col s3"><a class="active" href="#userStats">User Stats</a></li>
                </ul>
                <div id="userInfo" class="col s12">
                UserInfo
                </div>
                <div id="userStats" class="col s12">User Stats</div>
            </div>
        </div>
    </main>
    <!-- footer -->
    <footer class="page-footer blue-grey darken-3">
        <%- include partials/footer.ejs %>
    </footer>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/materialize/dist/js/materialize.min.js"></script>
    <script src="/js/navigation.js"></script>
    <script src="/js/home.js"></script>
</body>

</html>
